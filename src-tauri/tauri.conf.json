{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "ESP32 SMS Sender Control App",
	"version": "1.0.1",
	"identifier": "ro.stuckinaloop.esp32-sms-sender-control-app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun dev --host",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "ESP32 SMS sender control app",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"android": {
			"minSdkVersion": 30
		},
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
